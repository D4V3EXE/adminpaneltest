        <TextBox x:Name="Name" Width="190" Height="30" Canvas.Left="135" Canvas.Top="479" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" Background="#FF4C6085" Foreground="White"/>
        <TextBox x:Name="Specs" Width="190" Height="30" Canvas.Left="330" Canvas.Top="479" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Background="#FF4C6085" Foreground="White"/>
        <TextBox x:Name="Price" Width="110" Height="30" Canvas.Left="525" Canvas.Top="479" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Background="#FF4C6085" Foreground="White"/>

        <Button x:Name="SaveButton" Width="110" Height="30" Canvas.Left="644" Canvas.Top="479" 
                Content="Mentés" HorizontalAlignment="Left" VerticalAlignment="Center" Click="SaveButton_Click" FontSize="18" Background="#FF39A0ED" Foreground="#FFE6E6E6" FontWeight="Bold" />

        <Label x:Name="AkcioLabel" Content="Akció" Canvas.Left="6" Canvas.Top="530" 
               FontSize="32" Foreground="#FF5BC0BE" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="51" Width="109" />

        <ComboBox x:Name="DiscountComboBox" Width="140" Height="30" Canvas.Left="10" Canvas.Top="597" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" Background="#FF4C6085" Style="{DynamicResource ComboBoxStyle1}" Foreground="White">
            <ComboBoxItem Content="MOBO"/>
            <ComboBoxItem Content="CPU"/>
            <ComboBoxItem Content="RAM"/>
