        <TextBox x:Name="DiscountTextBox" Width="60" Height="30" Canvas.Left="159" Canvas.Top="597" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" Background="#FF4C6085" Foreground="White"/>

        <Button x:Name="DiscountButton" Width="80" Height="30" Canvas.Left="230" Canvas.Top="597" 
                Content="Mentés" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" Background="#FF39A0ED" Foreground="White" FontWeight="Bold" Click="DiscountButton_Click" />
        <Label Content="Típus" Canvas.Left="10" Canvas.Top="454" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="Név" Canvas.Left="135" Canvas.Top="454" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"/>
        <Label Content="Leírás" Canvas.Left="330" Canvas.Top="454" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="Ár (Ft)" Canvas.Left="525" Canvas.Top="454" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="Típus" Canvas.Left="10" Canvas.Top="571" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="%" Canvas.Left="159" Canvas.Top="571" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" RenderTransformOrigin="1.211,0.965"/>
    </Canvas>



</Window>
